<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/relative_item"
        android:layout_width="76dp"
        android:layout_height="76dp"
        android:background="@drawable/circle_color">

        <ImageView
            android:id="@+id/img_icon_item"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_centerInParent="true"
            android:src="@drawable/icon_image" />

        <TextView
            android:id="@+id/txt_number_file"
            android:layout_width="56dp"
            android:layout_height="20dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:background="@drawable/custom_rec"
            android:gravity="center"
            android:text="40"
            android:textColor="@android:color/white" />
    </RelativeLayout>

    <TextView
        android:id="@+id/txt_name_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/relative_item"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:text="Images"
        android:textColor="@android:color/black" />
</RelativeLayout>